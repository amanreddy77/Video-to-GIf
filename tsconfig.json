{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",  // Change this if using React 17+
    "lib": [
      "esnext",
      "dom"
    ],
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.test.ts"
  ]
}
